@model LMS_Web.Areas.Loan.Models.UserWiseLoan;
@{
    ViewData["Title"] = "Add";
}
<div class="row justify-content-center mt-4 mb-2">
    <div class="col-md-8">
        <form method="post" asp-action="Add" enctype="multipart/form-data" class="form-signin create-form bg-white rounded border shadow-sm p-4">
            <div class="text-center mb-4 card">
                <h1 class="h5 mb-3 font-weight-bold">User Wise Loan Add</h1>
            </div>
            <input type="hidden" id="id" asp-for="Id" class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row justify-content-between">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">User</label>

                        @Html.DropDownList("AppUserId", new SelectList(ViewBag.users, "Id", "FullName"), "Select User", new { @class = "form-control", @required = "required" })

                    </div>
                    <div class="form-group">
                        <label class="control-label">Loan Head</label>
                        @Html.DropDownList("LoanHeadId", new SelectList(ViewBag.loanHead, "Id", "Name"), "Select Loan Head", new { @class = "form-control", @required = "required" })

                    </div>
                    <div class="form-group">
                        <label class="control-label">Loan Amount</label>
                        <input id="" type="number" asp-for="LoanAmount" required class="form-control" />
                        <span asp-validation-for="LoanAmount" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="margin-top: 18%;">
                        <input id="IsSameEveryMonth" asp-for="IsRefundable" onclick="CheckInfo()" />
                        <label class="control-label">Is Refundable</label>
                        <span asp-validation-for="IsRefundable" class="text-danger"></span>
                    </div>

                  

                </div>
                <div class="col-md-6">
@*
                    <div class="form-group">
                        <label class="control-label">Start Month</label>
                        <select name="month" class="form-control" tabindex="10">
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Start Year</label>
                        <select id="ddlYears" name="year" class="form-control"></select>
                    </div>
*@
                   <div class="form-group">
                        <label class="control-label">No Of Installment</label>
                        <input id="" type="number" asp-for="NoOfInstallment" required class="form-control" />
                        <span asp-validation-for="NoOfInstallment" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ApplicationDate" class="control-label">Application Date</label>
                        <input required="required" asp-for="ApplicationDate" type="date" class="form-control" />
                        <span asp-validation-for="ApplicationDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">No Of Installment For Interest</label>
                        <input id="" type="number" asp-for="NoOfInstallmentForInterest" class="form-control" />
                        <span asp-validation-for="NoOfInstallmentForInterest" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4 text-center">
                        <a class="btn btn-secondary btn-lg" asp-action="List">List</a>
                        <input type="submit" name="btnValue" id="submitBtn" value="Save" class="btn btn-primary btn-lg" />
                    </div>

                </div>
            </div>
            
        </form>
    </div>
</div>
@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#Loan").css("display", "block");
            var id = $("#id").val();
            if (id != 0) {
                $("#submitBtn").val("Update");
            }
            $(function () {
                $("#AppUserId").select2();
            });
            var currentYear = (new Date()).getFullYear() + 12;
            var ddlYears = document.getElementById("ddlYears");

            for (var i = 2010; i <= currentYear; i++) {
                var option = document.createElement("OPTION");
                option.innerHTML = i;
                option.value = i;
                ddlYears.appendChild(option);
            }
        });

    </script>
}
