@model IEnumerable<LMS_Web.Areas.Salary.Models.GradeWisePayScale>

@{
    ViewData["Title"] = "Grade Wise Pay Scale List";
    int row = 1;
}

<div class="text-center">
    <h1 class="display-5 mt-4 mb-4 p-2">@ViewData["Title"] </h1>
</div>
<div id="MessageDiv" style="text-align: center;">
    <label style="color:green"><span id="SuccessMessageDiv">@ViewBag.Success</span></label>
    <label style="color:red"><span id="ErrorMessageDiv" style="color: red">@ViewBag.Error</span></label>
</div>
<a asp-action="Add" class="btn btn-primary mt-3 mb-3"><i class="fas fa-plus-circle"></i> Add Grade Wise Pay Scale</a>
<div class="table-responsive">
    <table class="table table-striped table-borderless custrom-table mb-2" id="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Grade</th>
                <th>PayScale</th>
                <th>Amount</th>
                <th>Percentage</th>
                <th>IsFixed</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>@(row++)</td>
                    <td>@item.Grade.Name</td>
                    <td>@item.PayScale.Name</td>
                    <td>@item.FixedAmount</td>
                    <td>@item.Percentage</td>
                    <td>@item.IsFixed</td>
                    <td>
                        <a asp-action="Add" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#Allowance").css("display", "block");
            $('#table').DataTable();
        });
    </script>
}
