    <partial name="_ValidationScriptsPartial" />


    <script>
        function GetImage() {
            var phoneNumber = $("#phone").val();
            $.ajax({
                type: "GET",
                url: "/Home/GetUserImage",
                data: { phoneNumber: phoneNumber },
                success: function (res) {
                    //$("#userImage").html("");
                    if (res != null) {
                        $("#userImage").attr("src", "/image/user/" + res);
                    }
                }
            });
        }
    </script>

