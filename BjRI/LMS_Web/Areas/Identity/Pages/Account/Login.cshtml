<body>

    <div class="container-fluid conya">
        <div class="side-left">
            <div class="sid-layy">
                <div class="row slid-roo justify-content-center">
                    <div class="data-portion">
                        <img src="~/image/logo-lg.png" class="img-fluid" />
                        <h2>বাংলাদেশ পাট গবেষণা ইনস্টিটিউট</h2>

                        <div class="">
                            <h5 class="text-capitalize subtitle">Salary, CPF and Loan Management Software</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="side-right">

            <div class="side-left-contain">

                <form id="account" class="form-signin" method="post">

                    <img class="logo" src="~/image/logo.png" alt="logo" />

                    <h2>বাংলাদেশ পাট গবেষণা ইনস্টিটিউট</h2>
                    <h5 class="text-capitalize subtitle">Salary, CPF and Loan Management Software</h5>
                    <h6>Sing In</h6>

                    @*<div asp-validation-summary="All" class="text-danger"></div>*@
                    @Html.ValidationMessage("NoUserError", new { @class = "text-danger" })
                    @Html.ValidationMessage("PasswordError", new { @class = "text-danger" })

                    <div class="form-row">
                        <label asp-for="Input.Phone"></label>
                        <input type="number" asp-for="Input.Phone" id="phone" class="form-control form-control-sm" onkeyup="GetImage()" />
                        <span asp-validation-for="Input.Phone" class="text-danger small"></span>
                    </div>

                    <div class="form-row">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control form-control-sm" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="form-row row skjh">
                        <div class="col-7 left no-padding">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        @*<div class="col-5">
                                <span> <a href="">Forget Password ?</a></span>
                            </div>*@

                    </div>

                    <div class="form-row dfr">
                        <button class="btn btn-sm btn-success" type="submit">লগইন</button>
                    </div>

                </form>

            </div>

        </div>


    </div>

