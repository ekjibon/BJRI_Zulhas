@model LMS_Web.Areas.CPF.Models.InvestmentInfo;
@{
    ViewData["Title"] = "Investment Report";
}
<div class="row justify-content-center mt-4 mb-2">
    <div class="col-md-8">
        <form method="post" asp-action="InvestmentReport" enctype="multipart/form-data" class="form-signin create-form bg-white rounded border shadow-sm p-4">
            <div class="text-center mb-4 card">
                <h1 class="h5 mb-3 font-weight-bold">Investment Report</h1>
            </div>
            <input type="hidden" id="id" asp-for="Id" class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row justify-content-between">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">User</label>

                        @Html.DropDownList("AppUserId", new SelectList(ViewBag.users, "Id", "FullName"), "Select User", new { @class = "form-control", @required = "required" })

                    </div>
                    <div class="form-group">
                        <label class="control-label">From Month</label>
                        <select name="fmonth" class="form-control" tabindex="10">
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Start Year</label>
                        <select id="ddlfYears" name="fyear" class="form-control"></select>
                    </div>

                </div>
                <div class="col-md-6">


                    <div class="form-group">
                        <label class="control-label">Station</label>
                        @Html.DropDownList("StationId", new SelectList(ViewBag.Station, "Id", "Name"), "Select Station", new { @class = "form-control",@required="required" })

                    </div>

                    <div class="form-group">
                        <label class="control-label">TO Month</label>
                        <select name="tmonth" class="form-control" tabindex="10">
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">TO Year</label>
                        <select id="ddltYears" name="tyear" class="form-control"></select>
                    </div>

                </div>
            </div>
            <div class="form-group mt-4 text-center">
                <input type="submit" name="btnValue" id="submitBtn" value="Print" class="btn btn-primary form-control" />
            </div>
        </form>
    </div>
</div>
@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#Loan").css("display", "block");
            var id = $("#id").val();
            if (id != 0) {
                $("#submitBtn").val("Update");
            }

            var currentfYear = (new Date()).getFullYear() + 12;
            var ddlfYears = document.getElementById("ddlfYears");

            for (var i = 2022; i <= currentfYear; i++) {
                var option = document.createElement("OPTION");
                option.innerHTML = i;
                option.value = i;
                ddlfYears.appendChild(option);
            }

            var currenttYear = (new Date()).getFullYear() + 12;
            var ddltYears = document.getElementById("ddltYears");

            for (var i = 2022; i <= currenttYear; i++) {
                var option = document.createElement("OPTION");
                option.innerHTML = i;
                option.value = i;
                ddltYears.appendChild(option);
            }
        });

    </script>
}
