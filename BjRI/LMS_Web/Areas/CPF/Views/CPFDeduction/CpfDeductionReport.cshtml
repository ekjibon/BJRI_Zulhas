@{
    ViewData["Title"] = "CPF Deduction Report";
    Layout = "~/Areas/CPF/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center mt-4 mb-2">
    <div class="col-md-8">
        <form method="post" asp-action="CpfDeductionReport" class="form-signin create-form bg-white rounded border shadow-sm p-4">
            <div class="text-center mb-4">
                <h1 class="h5 mb-3 font-weight-bold">CPF Deduction Report</h1>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">User</label>
                        @Html.DropDownList("AppUserId", new SelectList(ViewBag.users, "Id", "FullName"), "Select User", new { @class = "form-control", @required = "required" })


                    </div>

                    <div class="form-group">
                        <label class="control-label">Month</label>
                        <select name="month" class="form-control" tabindex="10">
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">


                    
                        <div class="form-group">
                            <label class="control-label">Station</label>
                            @Html.DropDownList("StationId", new SelectList(ViewBag.Station, "Id", "Name"), "Select Station", new { @class = "form-control",@required="required"})
                        </div>
                   


                    <div class="form-group">
                        <label @*asp-for="StopUntilYear"*@ class="control-label">Year</label>

                        <select id="ddlYears" name="year" class="form-control"></select>
                        <span @*asp-validation-for="StopUntilYear"*@ class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="form-group mt-4 text-center">
                <input type="submit" name="btnValue" id="submitBtn" value="Print" class="btn btn-primary form-control" />
            </div>
        </form>
    </div>
</div>
@section scripts
    {
    <script>
        $(document).ready(function () {
            $("#Report").css("display", "block");
            var currentYear = (new Date()).getFullYear() + 10;
            var ddlYears = document.getElementById("ddlYears");

            for (var i = 2022; i <= currentYear; i++) {
                var option = document.createElement("OPTION");
                option.innerHTML = i;
                option.value = i;
                ddlYears.appendChild(option);
            }
        });

    </script>
}