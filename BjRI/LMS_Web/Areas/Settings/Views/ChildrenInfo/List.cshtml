@model IEnumerable<LMS_Web.Areas.Settings.Models.ChildrenInfo>

@{
    ViewData["Title"] = "Children Info List";
    int row = 1;
}

<div class="text-center">
    <h1 class="display-5 mt-4 mb-4 p-2">@ViewData["Title"] </h1>
</div>
<div id="MessageDiv" style="text-align: center;">
    <label style="color:green"><span id="SuccessMessageDiv">@ViewBag.Success</span></label>
    <label style="color:red"><span id="ErrorMessageDiv" style="color: red">@ViewBag.Error</span></label>
</div>
<a asp-action="Add" class="btn btn-primary mt-3 mb-3"><i class="fas fa-plus-circle"></i> Add Children Info</a>
<div class="table-responsive">
    <table class="table table-striped table-borderless custrom-table mb-2" id="table">
        <thead>
            <tr>
                <th>#</th>
                <th>UserName</th>
                <th>Children Name</th>
                <th>Children DateOfBirth</th>
                <th>IsApprove</th>
                <th>ApproveDate</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>@(row++)</td>
                    <td>@item.AppUser.FullName</td>
                    <td>@item.Name</td>
                    <td>@item.DateOfBirth.ToString("MM/dd/yyyy") </td>
                    <td>@item.IsApprove</td>
                    <td>@item.ApproveDate.ToString("MM/dd/yyyy")</td>
                    <td>
                        <a asp-action="Add" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#ChildrenInfo").css("display", "block");
            $('#table').DataTable();
        });
    </script>
}