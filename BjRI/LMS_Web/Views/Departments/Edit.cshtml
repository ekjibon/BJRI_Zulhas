@model LMS_Web.Models.Department

@{
    ViewData["Title"] = "Edit";
}
<div class="row justify-content-center mt-4 mb-2">
    <div class="col-md-5">
        <form asp-action="Edit" class="form-signin create-form bg-white rounded border shadow-sm p-4">
            <div class="text-center mb-4">
                <h1 class="h5 mb-3 font-weight-bold">বিভাগ</h1>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input required="required" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameBangla" class="control-label"></label>
                <input asp-for="NameBangla" required="required" class="form-control" />
                <span asp-validation-for="NameBangla" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WingId" class="control-label"></label>
                <select required="required" asp-for="WingId" class="form-control" asp-items="ViewBag.WingId"></select>
                <span asp-validation-for="WingId" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 text-center">
                <a class="btn btn-secondary" asp-action="Index">বিভাগের তালিকা</a>
                <input type="submit" value="সেভ করুন" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


