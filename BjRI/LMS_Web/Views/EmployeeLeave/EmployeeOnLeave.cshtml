@model IEnumerable<LMS_Web.Models.LeaveApplication>

@{
    ViewData["Title"] = "ছুটিতে থাকা কর্মীবৃন্দ";
}

<link href="~/css/datatable.min.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />

<div class="text-center">
    <h1 class="display-5 mt-4 mb-4 p-2">@ViewData["Title"] </h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-borderless custrom-table mb-2" id="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Applicant.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Applicant.EmployeeCode)
                </th>
                <th>
                    বিভাগ
                </th>
                <th>
                    পদবি
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FromDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ToDate)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Applicant.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Applicant.EmployeeCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Applicant.Department.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Applicant.Designation.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FromDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ToDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



@section scripts{
    <script src="//cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#table').DataTable();
        });
    </script>
}