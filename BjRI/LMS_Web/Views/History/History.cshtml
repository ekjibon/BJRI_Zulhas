@model IEnumerable<LMS_Web.Models.ApprovedHistory>

@{
    int fileNumber = 1;
}

<link href="~/css/datatable.min.css" rel="stylesheet" />

<div class="table-responsive mt-5">
    <table id="leaveTable" class="table table-striped table-borderless custrom-table mb-2">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LeaveApplication.ApplicantId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LeaveApplication.LeaveTypeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LeaveApplication.FromDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LeaveApplication.ToDate)
                </th>
                <th>
                    মোট দিন
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.LeaveApplication.Reason)
                </th>
                <th>অবস্থা</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LeaveApplication.Applicant.FullName)
                    </td>
                    @if (item.LeaveApplication.EarnLeaveType == 0)
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.LeaveApplication.LeaveType.Name)
                        </td>
                    }
                    else if (item.LeaveApplication.EarnLeaveType == 1)
                    {
                        <td>
                            অর্জিত (গড়)
                        </td>
                    }
                    else if (item.LeaveApplication.EarnLeaveType == 2)
                    {
                        <td>
                            অর্জিত (অর্ধ গড়)
                        </td>
                    }

                    <td>
                        @Html.DisplayFor(modelItem => item.LeaveApplication.FromDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LeaveApplication.ToDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LeaveApplication.TotalDays)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LeaveApplication.Reason)
                    </td>
                    <td>

                        <a class="bg-success border rounded text-white text-center">@item.OperationType</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script>
        $("#leaveTable").DataTable();
    </script>

}