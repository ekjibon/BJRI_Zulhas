@section scripts
{
    <script src="~/js/jquery.dataTables.min.js"></script>
    <script>
        $("#leaveBalance").DataTable();
        function LoadLeave() {
            var leaveId = $("#LeaveId").val();
            $.ajax({
                type: "GET",
                url: "/Leaves/LoadLeaveBalance",
                data: { leaveId: leaveId },
                success: function (res) {
                    $("#leaveListDiv").html("");
                    $("#leaveListDiv").append(res);
                }
            });
        }
    </script>
