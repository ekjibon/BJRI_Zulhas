
@{
    ViewData["Title"] = "ছুটির আবেদন";
}

<div class="row justify-content-center mt-4 mb-4">
    <div class="col-md-10">

        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">@ViewBag.SuccessMessage</div>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }


        <form id="submitFrm" asp-action="Create" enctype="multipart/form-data" class="form-signin create-form bg-white rounded border shadow-sm p-4">

            <div class="text-center mt-2 mb-4">
                <h1 class="h5 mb-3 font-weight-bold">ছুটির আবেদন</h1>
            </div>

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info">@ViewBag.Message</div>
            }
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label class="control-label">আবেদনকারীর কোড</label>
                        <input name="empCode" type="text" class="form-control" />
                    </div>
                </div>


                <div class="col-6">
                    <div class="form-group">
                        <label class="control-label">Days</label>
                        <input name="days" type="number" class="form-control" />
                    </div>

                </div>
                <div class="col-6">
                    <input type="submit" value="সেভ করুন" class="btn btn-success" />

                </div>
            </div>
            @*<div class="form-group pt-3 text-center">

                </div>*@

        </form>
    </div>
</div>

