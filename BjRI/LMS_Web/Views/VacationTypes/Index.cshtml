@model IEnumerable<LMS_Web.Models.LeaveType>

@{
    ViewData["Title"] = "Vacation Types";
}

<link href="~/css/datatable.min.css" rel="stylesheet" />


<style>
    table.dataTable {
        border-collapse: collapse;
    }

    table th {
        font-size: .8rem;
    }

    table td {
        font-size: .8rem;
    }


    .dataTables_wrapper .dataTables_paginate .paginate_button {
        border-radius: 10px;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button {
        padding: .2em .5em;
    }
</style>
<h2 class="text-center">ছুটির ধরণ</h2>

<p>
    <a class="btn btn-info" asp-action="Create">নতুন যোগ করুন</a>
</p>

<table id="vacationTypes" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedDateTime)
            </th>
            <th>করনীয়</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedDateTime)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">পরিবর্তন</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">বিস্তারিত</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">মুছে ফেলুন</a>
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts{
    <script src="//cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#vacationTypes').DataTable();
        });
    </script>
}