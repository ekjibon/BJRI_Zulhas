@model LMS_Web.Models.Holiday

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center mt-4 mb-2">
    <div class="col-md-5">
        
        <form asp-action="Create" class="form-signin create-form bg-white rounded border shadow-sm p-4">

            <div class="text-center mb-4">
                <h1 class="h5 mb-3 font-weight-bold">ছুটি</h1>
            </div>

            @* <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FromDate" class="control-label"></label>
                <input required="required" name="FromDate" autocomplete="off" placeholder="dd/mm/yyyy" class="form-control date" />
              
            </div>
            <div class="form-group">
                <label asp-for="ToDate" class="control-label"></label>
                <input required="required" name="ToDate" autocomplete="off" placeholder="dd/mm/yyyy"  class="form-control date" />
                
            </div>
            <div class="form-group">
                <label asp-for="Remarks" class="control-label"></label>
                <textarea asp-for="Remarks" class="form-control"></textarea>
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 text-center">
                <a class="btn btn-secondary font-weight-bold" asp-action="Index">তালিকা</a>
                <input type="submit" value="যোগ করুন" class="btn btn-success font-weight-bold" />
            </div>
        </form>
    </div>
</div>

