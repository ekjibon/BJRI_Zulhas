@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>


<div class="text-center">
    <h1 class="display-5 mt-4 mb-4 p-2"> All Roles</h1>
</div>

<div class="table-responsive">
    <table class="table table-striped table-borderless custrom-table mb-2">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Update / Delete</th>
        </tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a class="badge badge-success" asp-action="Update" asp-route-id="@role.Id">Update</a>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post" class="d-inline-block">
                        <button type="submit" class="badge badge-danger border-0">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>

<a asp-action="AddRole" class="btn btn-sm btn-success mt-2">Create a Role</a>