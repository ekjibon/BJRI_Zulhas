                            <div class="text-center">
                                <a asp-controller="Holidays" asp-action="Index" class="font-weight-bold font-size-h4 d-inline-block mb-3">@DateTime.Now.Year</a>
                                <div class="text-dark-75">বাৎসরিক ছুটির ক্যালেন্ডার</div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>*@

        <div class="col-lg-3">
            <div class="card custom-card card-stretch gutter-b wave wave-animate-slow wave-success p-0 mb-4">
                <div class="card-body">
                    <div class="align-items-center">
                        <div class="text-center">
                            <a asp-controller="Leaves" asp-action="Balance" class="font-weight-bold font-size-h4 d-inline-block mb-3">বিস্তারিত</a>
                            <div class="text-dark-75">কর্মীদের ছুটির বিস্তারিত</div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
