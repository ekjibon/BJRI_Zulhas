
@{
    Layout = null;
}
<link href="~/css/notosansbengali.css" rel="stylesheet" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link href="~/css/layout.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/site.css" />
<link href="~/css/jquery-ui.css" rel="stylesheet" />
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <nav class="sb-topnav navbar navbar-expand navbar-dark" style="background-color: #008000;">
        <a class="navbar-brand navbar-org-name d-none d-md-inline-block text-center">
            <img src="~/image/logo.png" class="img-fluid" />
        </a>
        <a class="" style="color: #ffcc00; font-size: 20px;">Salary, CPF and Loan Management Software</a>
        <!-- Navbar Search-->
        <partial name="_NavSearch" />
        <!-- Navbar-->
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <a class="d-block d-md-none d-lg-none dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.UserOwnName()</a>
                    @*<div class="d-block d-md-none d-lg-none  dropdown-divider"></div>*@                   
                    @*<div class="dropdown-divider"></div>*@
                    <form class="form-inline m-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                        <button type="submit" class="dropdown-item">লগআউট</button>
                    </form>
                </div>
            </li>
        </ul>
    </nav>

    <div class="container">
        <div class="row mt-5 justify-content-center">
            <a title="Salary" class="col-md-5 m-3"
               asp-action="test" asp-controller="Dashboard" asp-area="Salary" style="cursor: pointer;">
                <div class="card">
                    <div class="card-header" style="background-color: #e9c122;">
                        <h6 class="text-center text-white">Salary</h6>
                    </div>
                    <div class="card-body m-auto">
                        <img height="170" width="300" src="~/image/Salary.jpg" />
                    </div>
                </div>
            </a>
            <a title="CPF" class="col-md-5 m-3" asp-area="CPF" asp-controller="CpfHome" asp-action="Index" style="cursor: pointer;">
                <div class="card">
                    <div class="card-header" style="background-color: #e9c122;">
                        <h6 class="text-center text-white">Central Provident Fund</h6>
                    </div>
                    <div class="card-body m-auto">
                        <img height="170" width="300" src="~/image/CPF.png" />
                    </div>
                </div>
            </a>
            <a title="Loan" class="col-md-5 m-3" asp-area="Loan" asp-controller="Dashboard" asp-action="Index" style="cursor: pointer;">
                <div class="card">
                    <div class="card-header" style="background-color: #e9c122;">
                        <h6 class="text-center text-white">Loan</h6>
                    </div>
                    <div class="card-body m-auto">
                        <img height="170" width="300" src="~/image/Loan.jpg" />
                    </div>
                </div>
            </a>
            <a title="Settings" class="col-md-5 m-3" asp-area="Settings" asp-controller="Role" asp-action="Create" style="cursor: pointer;">
                <div class="card">
                    <div class="card-header" style="background-color: #e9c122;">
                        <h6 class="text-center text-white">Settings</h6>
                    </div>
                    <div class="card-body m-auto">
                        <img height="170" width="300" src="~/image/settings.png" />
                    </div>
                </div>
            </a>
        </div>
    </div>
</body>
</html>
<script src="@Url.Content("~/js/all.min.js")" crossorigin="anonymous"></script>
<script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")"></script>
<script src="@Url.Content("~/lib/bootstrap/dist/js/bootstrap.bundle.min.js")"></script>
<script src="@Url.Content("~/js/sidebar.js")"></script>
<script src="@Url.Content("~/js/jquery-ui.js")"></script>
<script src="@Url.Content("~/js/site.js")" asp-append-version="true"></script>